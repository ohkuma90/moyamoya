<!DOCTYPE html>
<html>
  <head>
    <title>Moyamoya</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.css">
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%# Nav bar部分 %>
    <nav class="navbar navbar-expand-md navbar-light py-3 d-flex">
      <div class="container">
        <%= link_to "moyamoya", worries_path, class: "nav-link fs-1" %>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse pt-1" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <% if user_signed_in? %>
              <li class="nav-stock">
                <%= link_to "#{current_user.name}でログイン中", user_path(current_user.id), class: "nav-link"%>
              </li>
              <li class="nav-stock">
                <%= link_to "使い方を確認", root_path, class: "nav-link"%>
              </li>
              <li class="nav-stock">
                <%= link_to "モヤモヤを吐き出す", new_worry_path, class: "nav-link"%>
              </li>
              <li class="nav-stock">
                <%= link_to "TODOを確認する", todos_path, class: "nav-link"%>
              </li>
              <li class="nav-stock">
                <%= link_to "TODOを追加する", new_todo_path, class: "nav-link"%>
              </li>
              <li class="nav-stock">
                <%= link_to "宣言する！", new_declaration_path, class: "nav-link"%>
              </li>
              <li class="nav-stock">
                <%= link_to "みんなの宣言をみる", declarations_path, class: "nav-link"%>
              </li>
              <li class="nav-stock">
                <%= link_to "log out", destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link"%>
              </li>
            <% else %>
              <li class="nav-stock">
                <%= link_to "log in", new_user_session_path, class: "nav-link" %>
              </li>
              <li class="nav-stock">
                <%= link_to "sign up", new_user_registration_path, class: "nav-link" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <%# Nav bar部分終了 %>
    <%= yield %>
  </body>
</html>
